---
import { basics } from "@cv";
import Section from "./src/components/Section.astro";
import Mail from "./src/icons/Mail.astro";
import Phone from "./src/icons/Phone.astro";
import X from "./src/icons/X.astro";
import LinkedIn from "./src/icons/LinkedIn.astro";
import Github from "./src/icons/Github.astro";
import WorldMap from "./src/icons/WorldMap.astro";
const { name, label, image, location, profiles, phone, email } = basics;
const { city, region } = location;
const SOCIAL_ICONS: Record<string, any> = {
  Github,
  X,
  LinkedIn,
};
---

<Section>
  <div class="container">
    <div class="info">
      <h1>{name}</h1>
      <h2>{label}</h2>
      <span><WorldMap />{city},{region}</span>
      <footer>
        {
          email && (
            <a
              href={`mailto:${email}`}
              title={`Send an email to ${name} to the address ${email}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Mail />
            </a>
          )
        }
        {
          phone && (
            <a
              href={`tel:${phone}`}
              title={`Give a call to ${name} to the phone number ${phone}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Phone />
            </a>
          )
        }
        {
          profiles.map(({ network, url, username }) => {
            const Icon = SOCIAL_ICONS[network];
            return (
              <a
                href={url}
                title={`Visit ${name} profile on ${network}`}
                target="_blank"
                rel="noopener noreferrer"
              >
                <Icon />
              </a>
            );
          })
        }
      </footer>
    </div>
    <figure>
      <img src={image} alt={name} />
    </figure>
  </div>
</Section>
<style>
  .container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }
  .info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-right: 32px;
  }
  h1 {
    font-size: 2rem;
  }
  h2 {
    color: #444;
    font-weight: 600;
    font-size: 1.1rem;
    text-wrap: balance;
    letter-spacing: 0.09rem;
  }
  img {
    aspect-ratio: 2/3;
    object-fit: cover;
    width: 110px;
    border-radius: 16px;
    box-shadow: 3px 3px 3px 3px rgba(68, 68, 68, 0.1);
  }
  span {
    color: #444;
    display: flex;
    align-items: center;
    gap: 0.3rem;
    font-size: 0.85rem;
    letter-spacing: 0.17rem;
  }
  footer {
    display: flex;
    gap: 4px;
    margin-top: 8px;
  }
  footer a {
    color: #444;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #eee;
    padding: 4px;
    height: 32px;
    border-radius: 6px;
    transition: all 0.3s ease;
  }
  footer a:hover {
    background: #eee;
    border: 1px solid #444;
    color: #444;
  }
</style>
