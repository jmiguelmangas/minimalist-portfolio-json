---
import { HighlightSpanKind } from "typescript";
import Section from "./src/components/Section.astro";
import { projects } from "@cv";
---

<Section title="Projects">
  <ul>
    {
      projects.map(
        ({ url, description, highlights, labels, name, isActive }) => {
          return (
            <li>
              <article>
                <header>
                  <h3>
                    <a href={url} title={`Take a look to the project ${name}`}>
                      {name}
                    </a>
                    {isActive && <span>&bull;</span>}
                  </h3>
                  <p>{description}</p>
                </header>
                <footer>
                  <ul class="highlights">
                    {highlights.map((highlight) => {
                      return <li>{highlight}</li>;
                    })}
                  </ul>
                  <ul class="labels">
                    {labels.map((label) => {
                      return <li>{label}</li>;
                    })}
                  </ul>
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>
<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }
  article {
    border-radius: 6px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }
  article header {
    flex: 1;
  }
  article h3 {
    margin-bottom: 4px;
  }
  article h3 span {
    color: greenyellow;
  }
  article a {
    color: #111;
    border-radius: 6px;
    transition: all 0.3s ease;
  }
  article a:hover {
    text-decoration: underline;
  }
  article footer {
    display: flex;
    flex-direction: column;
    gap: 4px;
    font-size: 0.8rem;
  }
  article p {
    font-size: 0.7rem;
    color: #666;
    line-height: 1.2rem;
    margin-bottom: 4px;
  }
  .highlights {
    color: #666;
    font-size: 0.7rem;
  }
  .labels {
    display: flex;
    flex-wrap: wrap;
    gap: 5px;
    padding-top: 5%;
  }
  .labels li {
    border-radius: 6px;
    background: #eee;
    font-size: 0.8rem;
    font-weight: 500;
    color: black;
    padding: 0.2rem 0.3rem;
  }
</style>
