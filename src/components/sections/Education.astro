---
import Section from "@/components/Section.astro";
import { education } from "@cv";
import EducationIcon from "@/icons/educationastro.astro";

---

<Section title="Education">
  <ul>
    {
      education.map(
        ({ institution, startDate, endDate, area,studyType, courses}) => {
          const startYear = new Date(startDate).getFullYear();
          const endYear =
            endDate != null ? new Date(endDate).getFullYear() : "Current Job";
          const years = `${startYear} - ${endYear}`;
          return (
            <li>
              <article>
                <header>
      
                    <span class="edulogo"><EducationIcon /></span>
                    <subheader>
                    <h3>{studyType} in {area}</h3>
                    <h4>{institution}</h4>
                    <time>{years}</time>
                    </subheader>
                  
                </header>
                <footer>
                  <ul class="courses">
                    {courses.map((course) => {
                    return (
                      <li>
                      <span>â€¢ {course}</span>
                      </li>
                    );
                  })}
                  </ul>
                </footer>
              </article>
            </li>
          );
        }
      )
      } 
  </ul>
</Section>
<style>
  article{
    border-radius: 6px;
    border: #f2f2f2 solid;
    background: #fff;
    color: black;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.6rem 0.6rem;
    margin-bottom: 5px;
    flex: 1;
    height: 100%;
    width: 100%;
  }
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  article h3 {
    font-weight: 500;
    color: #888;
    margin-bottom: 8px;
    font-size: 0.9rem;
    letter-spacing: 0.03rem;
    text-wrap: balance;
    margin-left: .5rem;
  }
  article h4 {
    font-weight: 400;
    letter-spacing: 0.09rem;
    font-size: 0.75rem;
    margin-bottom: 10px;
  }
  header {
    display: flex;
    flex-direction: grid-row: inherit;;
    margin-bottom: 20px;
    color: #666;
  
  }  
  time {
    position: relative;
    top: 0;
    
    font-size: 0.85rem;
  }
  .highlights {
    padding-top: 1rem;
    padding-left: 3rem;
    gap: 32px;
    font-size: 1rem;
    color: #666;
  }
  footer span {
    display: flex;
    align-items: flex-start;
    gap: 5px;
    font-size: 0.8rem;
  }
  .courses span {
  display: flex;
  align-items: flex-start
  gap: 5px;
  font-size: 0.78rem;
  color: #666;
}
</style>
