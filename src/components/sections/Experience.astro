---
import Section from "./src/components/Section.astro";
import Arrow from "./src/icons/arrow.astro";
import { work } from "@cv";
---

<Section title="Working Experience">
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, highlights }) => {
          const startYear = new Date(startDate).getFullYear();
          const endYear =
            endDate != null ? new Date(endDate).getFullYear() : "Current Job";
          const years = `${startYear} - ${endYear}`;
          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>{name}</h3>
                    <h4>{position}</h4>
                  </div>
                  <time>{years}</time>
                </header>
                <footer>
                  <p>{summary}</p>
                  <ul class="highlights">
                    {highlights.map((highlight) => {
                      return (
                        <li>
                          <span>
                            <Arrow />
                            {highlight}
                          </span>
                        </li>
                      );
                    })}
                  </ul>
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>
<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }
  article h3 {
    font-weight: 500;
    color: #111;
    margin-bottom: 8px;
    text-wrap: balance;
  }
  article h4 {
    color: #222;
    font-weight: 400;
    letter-spacing: 0.09rem;
    margin-bottom: 10px;
  }
  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 2px;
  }
  time {
    position: relative;
    top: 0;
    color: #888;
    font-size: 0.85rem;
  }
  .highlights {
    padding-top: 1rem;
    padding-left: 3rem;
    gap: 32px;
    font-size: 1rem;
    color: #666;
  }
  footer span {
    display: flex;
    align-items: flex-start;
    gap: 5px;
    font-size: 0.8rem;
  }
</style>
