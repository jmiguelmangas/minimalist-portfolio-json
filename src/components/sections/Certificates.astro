---
import Section from "@/components/Section.astro";
import { certificates } from "@cv";
import Certificate from "@/icons/certificate.astro";
---

<Section title="Certificates">
  <ul>
    {
      certificates.map(({ name, date, issuer, highlights }) => {
        const Year = new Date(date).getFullYear();
        return (
          <li>
            <article>
              <superheader>
                <header>
                  <span class="edulogo">
                    <Certificate />
                  </span>
                  <p>
                    <time>{Year}</time>
                  </p>
                </header>
                <subheader>
                  <h3>
                    {name} at {issuer}
                  </h3>
                </subheader>
              </superheader>
              <footer>
                <ul class="highlights">
                  {highlights.map((highlight) => {
                    return (
                      <li>
                        <span>â€¢ {highlight}</span>
                      </li>
                    );
                  })}
                </ul>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>
<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 2fr));
    gap: 1rem;
  }
  article h3 {
    font-size: 0.95rem;
    margin-right: 15px;
    font-weight: 500;
    color: #666;
  }
  article subheader {
    display: flex;

    flex-wrap: wrap;
  }
  article time {
    letter-spacing: 0.02rem;
    color: #444;
    align-items: center;
    font-size: 0.89rem;
    margin-right: 5px;
    margin-left: 10px;
  }
  article {
    border-radius: 6px;
    border: #f2f2f2 solid;
    background: #fff;
    color: black;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.6rem 0.6rem;
    margin-bottom: 5px;
    text-wrap: wrap;
    height: 100%;
  }
  header {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 1rem;
  }
  superheader {
    display: flex;
  }
  footer {
    padding: 0.5rem 1rem;
    color: #666;
    text-indent: 0%;
  }
</style>
